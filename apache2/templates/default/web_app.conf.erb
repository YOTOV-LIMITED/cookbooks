<VirtualHost *:<%=@node[:apache][:vhost_port]%>>
  ServerName <%= @node[:apache][:server_name] %>
  ServerAlias <% @node[:apache][:server_aliases].each do |a| %><%= "#{a}" %> <% end %>
  DocumentRoot <%= @node[:apache][:docroot] %>
  RewriteEngine On
  
  <Directory <%= @node[:apache][:docroot] %>>
    Options FollowSymLinks
    <%- if @node[:chef][:roles].include?('blog') -%>
    AllowOverride all
    <%- else -%>
    AllowOverride None
    <%- end -%>
    Order allow,deny
    Allow from all
  </Directory>
  
  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  
  <% if @node[:chef][:roles].include?('blog') -%>
  <Directory <%= @node[:apache][:docroot] %>/blog/wp-admin>
    AuthType Basic
    AuthName "Restricted Access"
    AuthUserFile /etc/apache2/passwd/passwords
    Require user fr2wordpress
  </Directory>
  <% end -%>

  <Location /server-status>
    SetHandler server-status

    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
  </Location>

  LogLevel info
  ErrorLog <%= @node[:apache][:log_dir] %>/<%= @node[:apache][:name] %>-error.log
  CustomLog <%= @node[:apache][:log_dir] %>/<%= @node[:apache][:name] %>-access.log custom

  RewriteEngine On
  RewriteLog <%= @node[:apache][:log_dir] %>/<%= @node[:apache][:name] %>-rewrite.log
  RewriteLogLevel 0
  
  # Canonical host, <%= @node[:apache][:server_name] %>
  # RewriteCond %{HTTP_HOST}   !^<%= @node[:apache][:server_name] %> [NC]
  # RewriteCond %{HTTP_HOST}   !^$
  # RewriteRule ^/(.*)$        http://<%= @node[:apache][:server_name] %>/$1 [L,R=301]

  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
  RewriteRule ^.*$ /system/maintenance.html [L]
  
  <% if @node[:chef][:roles].include?('blog') %>
  # wordpress blog
  #RewriteRule ^blog\/search(.*) /index.php [P]

  #RewriteRule ^index\.php$ - [L]
  #RewriteCond %{REQUEST_FILENAME} !-f
  #RewriteCond %{REQUEST_FILENAME} !-d
  #RewriteRule . /index.php [L]
  <% end %>
</VirtualHost>