staging:
  morphology: stem_en
  index_exact_words: 1
  <% if node[:chef][:roles].include?('app') || node[:chef][:roles].include?('worker') %>
  address: <%= @server_address %>
  port: <%= @server_port %>
  mem_limit: <%= @memory_limit %>
  version: <%= @version %>
  <% end %>
  searchd_log_file: <%=node[:apache][:web_dir]%>/apps/<%=node[:apache][:name]%>/shared/log/searchd.log
  query_log_file: <%=node[:apache][:web_dir]%>/apps/<%=node[:apache][:name]%>/shared/log/searchd.query.log
  pid_file: <%=node[:apache][:web_dir]%>/apps/<%=node[:apache][:name]%>/shared/tmp/searchd.pid
  searchd_file_path: <%=node[:apache][:web_dir]%>/apps/<%=node[:apache][:name]%>/shared/db/sphinx/production

