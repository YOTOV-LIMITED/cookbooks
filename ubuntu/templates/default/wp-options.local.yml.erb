--- 
home: 
  autoload: "yes"
  option_value: <%= @app_url %>
siteurl: 
  autoload: "yes"
  option_value: <%= @app_url %>
wpv_clients: 
  autoload: "yes"
  option_value: <%= @varnish_server %>:<%= @varnish_port %>
wpv_enabled: 
  autoload: "yes"
  option_value: "1"
wpv_host_pattern: 
  autoload: "yes"
  option_value: <%= @app_url.gsub('http://', '').gsub(/\./, "\\\\\\\\.") %>$
wpv_path: 
  autoload: "yes"
  option_value: /blog
wpv_secrets: 
  autoload: "yes"
  option_value: ""
  